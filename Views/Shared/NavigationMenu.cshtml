@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<div class="col-md-2 sticky-md-top">
    <div class="card">
        <p class="card-header">Admin Panel</p>
        <div class="card-body">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="CarItem" asp-action="Index">Home</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CarItem" asp-action="PostCar">New Car</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="ContactUs" asp-action="Index">Contact Us</a>
                </li>
            </ul>
            <partial name="_LoginPartial" />
        </div>

    </div>
</div>